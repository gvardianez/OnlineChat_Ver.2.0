<?xml version="1.0" encoding="UTF-8"?>

<Configuration>
    <Properties>
        <Property name="basePath">logs</Property>
    </Properties>

    <Appenders>
        <File name="FILE_ONE" fileName="${basePath}/logfile_server.log" append="true">
            <PatternLayout pattern="%-5p %d{yyyy-MM-dd HH:mm:ss} (%F:%L) - %m%n" />
        </File>
        <File name="FILE_TWO" fileName="${basePath}/logfile_client.log" append="true">
            <PatternLayout pattern="%-5p %d{yyyy-MM-dd HH:mm:ss} (%F:%L) - %m%n" />
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p %d{yyyy-MM-dd HH:mm:ss} (%F:%L) - %m%n" />
        </Console>
    </Appenders>

    <Loggers>
        <Root level="trace">
            <AppenderRef ref="STDOUT" />
            <AppenderRef ref="FILE_ONE" />
        </Root>
        <Logger name="serverLogs" level="trace" additivity="false">
            <AppenderRef ref="FILE_ONE" />
            <AppenderRef ref="STDOUT" />
        </Logger>
        <Logger name="clientLogs" level="trace" additivity="false">
            <AppenderRef ref="FILE_TWO" />
            <AppenderRef ref="STDOUT" />
        </Logger>
    </Loggers>
</Configuration>